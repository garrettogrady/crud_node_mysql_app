<% include ../partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (event) { %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="event-name">Event Name</label>
                    <input type="text" class="form-control" name="event_name" id="event-name" value="<%= event.event_name %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="event-date">Date</label>
                    <input type="text" class="form-control" name="event_date" id="event-date" value="<%= event.event_date %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="event-time">Time</label>
                    <input type="text" class="form-control" name="event_time" id="event-time" value="<%= event.event_time %>" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="event-address">event address</label>
                    <input type="text" class="form-control" name="event_address" id="event-address" placeholder="event address" value="<%= event.event_address %>" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="event-level">Hype Level</label>
                    <select id="event-level" name="event_level" class="form-control" required>
                        <option selected><%= event.event_level %></option>
                        <option>Chill Sesh</option>
                        <option>Semi Lit</option>
                        <option>Very Lit</option>
                        <option>Absolute Rager</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Event</button>
        </form>
    <% } else { %>
        <p class="text-center">Event Not Found. Go <a href="/add_event">here</a> to add events.</p>
    <% } %>
</div>
</div>
</body>
</html>